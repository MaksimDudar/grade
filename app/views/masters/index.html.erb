<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <p style="color: green"><%= notice %></p>

<h3>МастерЛогистик (<%= send(:range) %>)</h3>
<p> <%= link_to "Новый отзыв", new_master_path %> </p><hr>



  <html lang="en">
  <head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Bootstrap Accordion</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
  </head>
  <body>
    <% @masters.each do |master| %>
      <% render master %>
  <div class="m-4">

      <div class="accordion" id="myAccordion">

          <div class="accordion-item">

              <h2 class="accordion-header" id="headingOne">

                  <button type="button" class="accordion-button collapsed" data-bs-toggle="collapse" data-bs-target="#collapseOne">

                      <%= "Отзыв № #{master.id}"%>
                  </button>
              </h2>
              <div id="collapseOne" class="accordion-collapse collapse" data-bs-parent="#myAccordion">
                  <div class="card-body">
                      <p><%= render master %></p>
                  </div>
                </div>
              </div>
          </div>
      </div>
  <% end %>
  </body>

  </html>



    </div>
  </div>
</div>
