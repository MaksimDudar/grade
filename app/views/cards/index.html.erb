<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <p style="color: green"><%= notice %></p>
      <h3>CardiTrans (<%= send(:range2) %>)</h3>
      <p> <%= link_to "Новый отзыв", new_card_path %> </p><hr>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
<% @cards.each do |card| %>
<div class="col-xs-12">
  <button class="btn btn-outline-success accordion-button collapsed p-3 mb-2 bg-light text-dark" type="button" data-bs-toggle="dropdown" aria-expanded="true"><%= "Отзыв № #{card.id}"%></button><hr>
  <ul class="dropdown-menu text-white bg-success mb-3 border-dark mb-3">
    <li><class=<%= render card %></li>
  <% end %>
</div>
</div>
</div>
